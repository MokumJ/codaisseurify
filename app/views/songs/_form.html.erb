<%= form_for [@artist, @song] do |f| %>


<div class="form-group">

  <%= f.text_field :name, placeholder: "song title", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.number_field :duration, placeholder: "min", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.date_field :release, placeholder: "1993", class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
  </div>

   <div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

