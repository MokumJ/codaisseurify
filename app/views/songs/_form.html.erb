<%= form_for [@artist, @song] do |f| %>


  <div class="form-group">
    <label>title</label>
    <%= f.text_field :name, placeholder: "song title", class: "form-control" %>
  </div>
    <hr>

  <div class="form-group">
    <label>duration</label>
    <div class="input-group">
    <div class="input-group-addon">min</div>
      <%= f.number_field :duration, placeholder: 3.00, class: "form-control" %>
    </div>
      <hr>

      <div class="form-group">
           <label class="control-label" for="date">release</label>
           <%= f.date_field :release, placeholder: "1993", class: "form-control" %>
         </div>

      <div class="form-group">
           <label>album</label>
           <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
      </div>

      <div class="form-group">
           <label>label</label>
           <%= f.text_field :label, placeholder: "label name", class: "form-control" %>
      </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
